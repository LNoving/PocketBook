<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/location"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:textColor="#3A5FCD"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/commodity"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_weight="0.52"
            android:textColor="#3A5FCD"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/show_photo"
            android:layout_width="match_parent"
            android:layout_height="166dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="#3A5FCD"
            android:text="金额:"/>
        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入金额"
            android:inputType="numberDecimal"
            android:maxLines="2"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/scan_bar_code"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:background="@drawable/button"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="扫描条码"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/take_photo"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:background="@drawable/button"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="拍照"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="125dp"
        android:layout_weight="0.05">

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/insert"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:text=" 记一笔 "
            android:textColor="@color/gray"
            android:textSize="15dp"
            app:sub_btn_background="#CAE1FF"
            app:sub_btn_duration="900"
            app:sub_btn_line_color="#3A5FCD"
            app:sub_btn_ripple_color="#3A5FCD"
            app:sub_btn_tick_color="@color/white"/>
    </LinearLayout>

</LinearLayout>
